{
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "vue": ["./node_modules/vue"],
      "vue-router": ["./node_modules/vue-router"],
      "@/*": ["./src/*"],
      "@componentsLibrary/*": ["../packages/components/src/*"]
    },
    "types": []
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules", "src/swagger/**"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
